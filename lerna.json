{
  "command": {
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock"
      ]
    },
    "publish": {
      "npmClientArgs": [
        "--access public"
      ]
    },
    "version": {
      "allowBranch": ["master"],
      "gitRemote": ["origin"]
    }
  },
  "packages": [
    "packages/*"
  ],
  "version": "independent"
}
